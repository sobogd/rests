{
  "entryFile": "src/index.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/controllers/*.ts"],
  "spec": {
    "outputDirectory": "public",
    "specVersion": 3,
    "securityDefinitions": {
      "Bearer": {
        "type": "apiKey",
        "in": "header",
        "name": "Authorization"
      }
    }
  },
  "routes": {
    "routesDir": "src",
    "authenticationModule": "src/services/users/authentication.ts"
  },
  "ignore": ["**/node_modules/**"]
}
